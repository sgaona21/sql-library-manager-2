extends layout 

block content
    h1 New Book 

    if errors
        ul 
            each error in errors 
                li.error-message= error.message

    form(action='/books/new', method='POST')
        p 
            label(for='title') Title
            input#title(type='text', name='title', value=book.title || required)
        p
            label(for='author') Author 
            input#author(type='text', name='author', value=book.author || required)
        p 
            label(for='genre') Genre 
            input#genre(type='text', name='genre', value=book.genre)
        p   
            label(for='year') Year 
            input#year(type='text', name='year', value=book.year)
        p 
            input(type='submit', value="Create New Book")
        p 
            a.button(href='/books') Cancel        

