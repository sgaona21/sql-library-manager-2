extends layout

block content
  h1 Books

  a.button(href='/books/new') Create New Book

  table 
    thead
      tr 
        th Title 
        th Author
        th Genre 
        th Year 
        th 
    tbody
      each book in books 
        tr
          td
            a(href=`/books/${book.id}`) #{book.title}
          td #{books.author} 
          td #{books.genre} 
          td #{books.year} 
